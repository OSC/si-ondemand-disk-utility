<span class="float-right mb-2">
    <a href="<%= url("/find_file") %>" class="btn btn-primary">
    <i class="fas fa-search"></i> Find Another File/User</a>
</span>

<table class="table table-hover table-responsive">
    <thead>
        <tr>
            <th scope="col">File Path</th>
            <th scope="col">Size</th>
            <th scope="col">Last Modified</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                <% @output.each do |t| %> 
                    <%= t.split("\t")[1] %>
                    <br>
                <% end %>
            </td>
            <td>
                <% @output.each do |t| %> 
                    <%= t.split("\t")[0] %>
                    <br>
                <% end %>
            <td>
                <% @modified.each do |x| %>
                    <%= x.split("\n")[0]%>
                    <br>
                <% end %>
           </td>
        </tr>
    </tbody>
</table>
